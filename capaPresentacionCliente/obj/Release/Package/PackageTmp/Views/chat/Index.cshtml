                                            <div>

                                            </div>



                                        </div>
                                        <div class="card-footer text-muted d-flex justify-content-start align-items-center p-3">
                                            <div class="input-group mb-0">
                                                <form id="formulario">
                                                    <input type="text" id="idCliente2" placeholder="idCliente2">
                                                    <input type="text" id="Mensaje" placeholder="Mensaje">
                                                    <button type="submit"><ion-icon name="navigate-outline"></ion-icon></button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </section>
            </div>

        </div>
    </div>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <ul id="mensajes">
        @foreach (var mensaje in Model)
        {
            <li>@mensaje.FechaHora.ToString("dd/MM/yyyy HH:mm:ss") - @mensaje.idCliente1: @mensaje.Mensaje</li>
        }
    </ul>




    @section scripts {
        <script>
            $(function () {
                var connection = new signalR.HubConnectionBuilder().withUrl("/chatHub").build();

                connection.on("RecibirMensaje", function (mensaje) {
                    $("#mensajes").append("<li>" + mensaje.fechaHora + " - " + mensaje.idCliente1 + ": " + mensaje.mensaje + "</li>");
                });

                connection.start().then(function () {
                    $("#formulario").submit(function (event) {
