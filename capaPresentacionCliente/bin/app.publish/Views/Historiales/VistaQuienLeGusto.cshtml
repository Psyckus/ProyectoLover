
@model List<CapaEntidad.cliente>
@{
    ViewBag.Title = "VistaMeGusta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <meta name="viewport" content="width=device-width" />
    <title>VistaMeGusta</title>
    <link href="~/Content/StylesJona/tablaMeGusta.css" rel="stylesheet" />

</head>
<body>
    <div>
        @*@con esto me tarigo el nombre y la imagen del usuario actual@*@
        @{
            var miObjeto = Session["Cliente"] as CapaEntidad.cliente;
        }

        @if (miObjeto != null)
        {
            <p></p>
        }

        <h2>Personas a que le  "gusto"</h2>
        <table>
            <tr>
                @*<th>Foto</th>*@
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
            @if (ViewBag.clientesQueinMeGusta.Count == 0)
            {
                <tr>
                    <td colspan="2">No le haz dado me gusta a ninguna persona.</td>
                </tr>
            }
            else
            {
                foreach (var cliente in ViewBag.clientesQueinMeGusta)
                {
                    <tr>
                        @*<td style="width: 20px; height: 20px; ">
                                <img src="@Url.Action("GetImage", "Historiales", new { id = miObjeto.idCliente})"style="width: 100%; max-width: 100%; border-radius: 50%;">
                            </td>*@


                        <td>@cliente.nombre</td>


                    </tr>
                }
            }


        </table>

    </div>
</body>
</html>

