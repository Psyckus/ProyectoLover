
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CambiarClave</title>
    <link href="~/Content/styleRegistro.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

</head>
<body>
    <div class="card-container">
        <div class="card">
            <h2>Cambiar Contraseña</h2>
            <form action="@Url.Action("CambiarClave","Acceso")" method="post">
                <input class="form-control" type="hidden" value="@TempData["idCliente"]" name="idCliente" />



                <input class="form-control" id="inputPassword" type="password" autocomplete="off" placeholder="clave actual" name="claveactual" value="@ViewData["vclave"]" />
                <input class="form-control" id="inputPassword" type="password" autocomplete="off" placeholder="nueva clave" name="nuevaclave" />
                <input class="form-control" id="inputPassword" type="password" autocomplete="off" placeholder="confirmar clave" name="confirmarclave" />

                @{
                    if (ViewBag.Error != null)
                    {

                        <div class="form-floating mb-3">
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.Error
                            </div>
                        </div>
                    }
                }


                <button type="submit">Restablecer la contraseña </button>

                <div style="text-align:center;">

                    <a class="small" href="@Url.Action("Index","Acceso")">Regresar al login</a>

                </div>

            </form>


        </div>

    </div>
</body>
</html>
