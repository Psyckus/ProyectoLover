@model CapaEntidad.tipo_genero


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Pregunta5</title>
    <link href="~/Content/StylesJona/Pregunta5.css" rel="stylesheet" />


</head>
<body>
    @if (ViewBag.Message != null)
    {
        <div class="error-message">@ViewBag.Message</div>
    }

    <div class="form-container">
        <input type="hidden" id="interesesSeleccionadosInput" name="interesesSeleccionados" value="">

        @using (Html.BeginForm("Pregunta5", "preguntasInteres", FormMethod.Post))
        {

            <h2>Por utlimo elige un genero que te identifique</h2>
            <label for="Genero">Genero:</label>
            <select id="generos" name="generos" required>
                <option value="">Seleccione una Genero</option>
                @foreach (var genero in ViewBag.tipo_generos)
                {
                    <option value="@genero.idtipoGenero ">@genero.nombre</option>
                }

            </select>



            <input id="btnSubmit" type="submit" value="Continuar">

        }


    </div>
</body>
</html>
