<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/sidemenu.css" />
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <title>@ViewBag.Title Panel</title>


</head>
<body>
    <input type="checkbox" id="menu-toggle" />
    <div class="sidebar">
        <div class="side-header">
            <h2><span>LOVER</span></h2>
        </div>
        <div class="profile">

            <div class="profile-img">
                <a href="@Url.Action("Principal","Home")">
                    @*@con esto me tarigo el nombre y la imagen del usuario actual@*@
                    @{
                        var miObjeto = Session["Cliente"] as CapaEntidad.cliente;
                    }

                    @if (miObjeto != null)
                    {
                        <p></p>
                    }
                    <img src="@Url.Action("GetImagePrincipal", "Perfil", new { id = miObjeto.idCliente })" alt="" />
                    @*<img src="~/imagenes/susana.jpeg" alt="" />*@
                </a>
            </div>

            <h3><samp>@(miObjeto != null ? miObjeto.nombre : Session["nombre"])</samp></h3>




        </div>
        <div class="side-menu">
            <ul class="dropdown" id="menu">
                <li class="dropdown_list">
                    <a href="~/Home/Cuenta" class="dropdown_link">
                        <span class=""><i class="las la-user-cog"></i></span>
                        <small>Cuenta</small>
                    </a>
                </li>
                <li class="dropdown_list">
                    <a href="@Url.Action("Index","Perfil")" class="dropdown_link">
                        <span class=""><i class="las la-user-circle"></i></span>
                        <small>Perfil</small>
                    </a>
                </li>
                <li class="dropdown_list">
                    <a href="#" class="dropdown_link">
                        <span class=""><i class="las la-history"></i></span>
                        <small>Historial</small>
                        <input type="checkbox" class="dropdown_check" />
                    </a>
                    <div class="dropdown_content">
                        <ul class="dropdown_sub">
                            <li class="dropdown_li">
                                <a href="#" class="dropdown_anchor">
                                    <p>Matches</p>
                                </a>
                                <div class="dropdown_content">
                                    <ul class="dropdown_sub">
                                        <li class="dropdown_lis">
                                            <a href="@Url.Action("HistorialMeGusta","Historiales")" class="dropdown_anchor">
                                                <small>Me gusta</small>
                                            </a>
                                        </li>
                                        <li class="dropdown_lis">
                                            <a href="@Url.Action("HistorialYaNoMeGusta","Historiales")" class="dropdown_anchor">
                                                <small>Ya no me gusta</small>
                                            </a>
                                        </li>
                                        <li class="dropdown_lis">
                                            <a href="@Url.Action("HistorialQuienMeGusta","Historiales")" class="dropdown_anchor">
                                                <small>¿A quién le gusto?</small>
                                            </a>
                                        </li>
                                    </ul>
                                </div>

                            </li>
                            <li class="dropdown_li">
                                <a href="#" class="dropdown_anchor">
                                    <p>Suspiros</p>
                                </a>
                                <div class="dropdown_content">
                                    <ul class="dropdown_sub">
                                        <li class="dropdown_lis">
                                            <a href="@Url.Action("suspiro","Home")" class="dropdown_anchor">
                                                <small>Enviados</small>
                                            </a>
                                        </li>
                                        <li class="dropdown_lis">
                                            <a href="@Url.Action("suspiroRecibido","Home")" class="dropdown_anchor">
                                                <small>Recibidos</small>
                                            </a>
                                        </li>
                                        <li class="dropdown_lis">
                                            <a href="@Url.Action("suspiroAceptado","Home")" class="dropdown_anchor">
                                                <small>Aceptados</small>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="dropdown_list">
                    <a href="#" class="dropdown_link">
                        <span class=""><i class="las la-user-check"></i></span>
                        <small>Test Personalidad</small>
                    </a>
                </li>

                <li class="dropdown_list">
                    <a href="@Url.Action("Index","Index")" class="dropdown_link">
                        <span class=""><i class="las la-times-circle"></i></span>
                        <small>Cerrar sesión</small>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="main-content">
        <header>
            <div class="header-content">
                <label for="menu-toggle">
                    <span class="las la-bars"></span>
                </label>

            </div>
        </header>
    </div>




    <main>
        <div class="container-fluid px-4">
            @RenderBody()
        </div>
    </main>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
