@model CapaEntidad.cliente


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Pregunta1</title>

    <link href="~/Content/StylesJona/Pregunta1.css" rel="stylesheet" />
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- jQuery UI -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>

</head>
<body>
    <div id="container">
        <div class="question">

            @{
                if (ViewBag.Error != null)
                {

                    <div class="form-floating mb-3">
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Error
                        </div>
                    </div>
                }
            }
            <form id="form" action="@Url.Action("Pregunta1","preguntasInteres")" method="post">
                <input class="form-control" type="hidden" value="@TempData["idCliente"]" name="idCliente" />
                <label for="input">
                    <span id="text">En que año nacistes?</span>
                </label>

                @Html.EditorFor(m => m.fecha_nac, new { htmlAttributes = new { @class = "form-control", @id = "fecha", @autocomplete = "off", @placeholder = "yyyy/mm/dd", @value = ViewData["fecha_nac"] } })
                <button type="submit" id="button">Siguiente</button>
            </form>
        </div>
    </div>
    <script>
        $(function () {
            $("#fecha").datepicker({
                dateFormat: "yy/mm/dd" // Opcional: formato de fecha personalizado
            });
        });
    </script>
</body>


</html>


