
@model List<CapaEntidad.cliente>
@{
    ViewBag.Title = "VistaMeGusta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <meta name="viewport" content="width=device-width" />
    <title>VistaMeGusta</title>
    <link href="~/Content/StylesJona/tablaMeGusta.css" rel="stylesheet" />
    <link href="~/Content/fontawesome.min.css" rel="stylesheet" />
    <link href="~/Content/fontawesome.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .btnReconsiderar {
            background-color: #5f0c0c;
            color: #fff;
            border: 1px solid #6c757d;
            font-size: 1.2rem;
            padding: 0.5rem 1rem;
            border-radius: 5px;
        }

            .btnReconsiderar:hover {
                background-color: #0069d9;
                border-color: #5a6268;
            }

            .btnReconsiderar:active, .btnReconsiderar.active {
                background-color: #0062cc;
                border-color: #5a6268;
                box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.5);
            }
    </style>
</head>
<body>
    <div>
        @*@con esto me tarigo el nombre y la imagen del usuario actual@*@
        @{
            var miObjeto = Session["Cliente"] as CapaEntidad.cliente;
        }

        @if (miObjeto != null)
        {
            <p></p>
        }

        <h2>Personas a los que les has dado "Me gusta"</h2>
        <table>
            <tr>
                @*<th>Foto</th>*@
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
            @if (ViewBag.ClientesGustados.Count == 0)
            {
                <tr>
                    <td colspan="2">No le haz dado me gusta a ninguna persona.</td>
                </tr>
            }
            else
            {
                foreach (var cliente in ViewBag.ClientesGustados)
                {
                    <tr>
                        @*<td style="width: 20px; height: 20px; ">
                                <img src="@Url.Action("GetImage", "Historiales", new { id = miObjeto.idCliente})"style="width: 100%; max-width: 100%; border-radius: 50%;">
                            </td>*@


                        <td>@cliente.nombre</td>
                        <td>
                            <button class="btnReconsiderar" data-id="@cliente.idCliente" type="button">
                                <i class="fa fa-thumbs-down"></i> Reconsiderar
                            </button>
                        </td>


                    </tr>
                }
            }


        </table>

    </div>
    <script src="~/Scripts/fontawesome/all.min.js"></script>
    <script>
    $(document).ready(function () {
        $('.btnReconsiderar').click(function () {
            console.log('Se hizo click en el botón Reconsiderar');
            var idCliente = $(this).data('id');
            $.ajax({
                url: '@Url.Action("ReconsiderarCliente", "Historiales")',
                type: 'POST',
                data: { idCliente: idCliente },
                success: function (result) {
                    if (result.success) {
                        // hacer algo en caso de éxito
                    } else {
                        // hacer algo en caso de error
                    }
                },
                error: function () {
                    // hacer algo en caso de error
                }
            });
        });
    });
    </script>


</body>

</html>

